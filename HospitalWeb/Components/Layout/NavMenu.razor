@using HospitalData.Services
@inject UserSessionService SessionService
@inject NavigationManager NavigationManager
@implements IDisposable

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">HospitalWeb</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        @if (SessionService.CurrentUser != null)
        {
            @if (SessionService.CurrentUser.RoleName == "Administrativo")
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="gestion-doctores">
                        <span class="bi bi-person-rolodex" aria-hidden="true"></span> Doctores
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="gestion-pacientes">
                        <span class="bi bi-people-fill" aria-hidden="true"></span> Pacientes
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="gestion-inventario">
                        <span class="bi bi-capsule" aria-hidden="true"></span> Inventario
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="calendario-citas">
                        <span class="bi bi-calendar-week" aria-hidden="true"></span> Citas
                    </NavLink>
                </div>
            }
            @if (SessionService.CurrentUser.RoleName == "Medico")
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="panel-doctor">
                        <span class="bi bi-clipboard2-pulse-fill" aria-hidden="true"></span> Panel Doctor
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="historial-consultas">
                        <span class="bi bi-archive-fill" aria-hidden="true"></span> Historial
                    </NavLink>
                </div>
            }
            @if (SessionService.CurrentUser.RoleName == "Paciente")
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="mis-citas">
                        <span class="bi bi-calendar-check" aria-hidden="true"></span> Mis Citas
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="agendar-cita">
                        <span class="bi bi-plus-circle-dotted" aria-hidden="true"></span> Agendar Cita
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="mis-recetas">
                        <span class="bi bi-capsule" aria-hidden="true"></span> Mis Recetas
                    </NavLink>
                </div>
            }
            <div class="nav-item px-3">
                <span class="nav-lisnk text-white">
                    <span class="bi bi-person-circle" aria-hidden="true"></span>
                    Bienvenido, <strong>@SessionService.CurrentUser.RoleName</strong>
                </span>
            </div>
            <div class="nav-item px-3">
                <button class="btn btn-link nav-link" @onclick="Logout">
                    <span class="bi bi-box-arrow-right" aria-hidden="true"></span> Cerrar Sesión
                </button>
            </div>
        }
        else
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="login">
                    <span class="bi bi-box-arrow-in-right" aria-hidden="true"></span> Login
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {
    protected override void OnInitialized()
    {
        SessionService.OnChange += StateHasChanged;
    }

    private void Logout()
    {
        SessionService.Logout();
        NavigationManager.NavigateTo("/login");
    }

    public void Dispose()
    {
        SessionService.OnChange -= StateHasChanged;
    }
}