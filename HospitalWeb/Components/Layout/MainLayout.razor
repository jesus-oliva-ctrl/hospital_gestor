@using HospitalData.Services
@inherits LayoutComponentBase
@implements IDisposable
@inject UserSessionService SessionService
@inject NavigationManager NavigationManager

<MudThemeProvider Theme="_currentTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Color="Color.Primary">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" 
                       Color="Color.Inherit" 
                       Edge="Edge.Start" 
                       OnClick="@((e) => _drawerOpen = !_drawerOpen)" />
        <MudText Typo="Typo.h6" Class="ml-3">Hospital Gestor</MudText>
        <MudSpacer />
        
        @if (SessionService.CurrentUser != null)
        {
            <MudMenu Label="@SessionService.CurrentUser.RoleName" 
                     Color="Color.Inherit" 
                     StartIcon="@Icons.Material.Filled.AccountCircle" 
                     EndIcon="@Icons.Material.Filled.KeyboardArrowDown">
                <MudMenuItem Href="mi-perfil" Icon="@Icons.Material.Filled.Person">Mi Perfil</MudMenuItem>
                <MudMenuItem OnClick="Logout" Icon="@Icons.Material.Filled.Logout">Cerrar Sesión</MudMenuItem>
            </MudMenu>
        }
        else
        {
            <MudButton Variant="Variant.Text" Color="Color.Inherit" Href="login">Iniciar Sesión</MudButton>
        }
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;
    
    private MudTheme _currentTheme = new MudTheme()
    {
        PaletteLight = new PaletteLight()
        {
            Primary = "#0078D4", 
            Secondary = "#2b8a3e", 
            AppbarBackground = "#0078D4",
            Background = "#f5f8fa" 
        }
    };

    protected override void OnInitialized()
    {
        SessionService.OnChange += StateHasChanged;
    }

    private void Logout()
    {
        SessionService.Logout();
        NavigationManager.NavigateTo("/login");
    }

    public void Dispose()
    {
        SessionService.OnChange -= StateHasChanged;
    }
}