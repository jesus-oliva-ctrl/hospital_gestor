@using HospitalData.DTOs
@using HospitalData.Services
@inject IPatientService PatientService

<div class="card">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Historial Clínico del Paciente</h5>
    </div>
    <div class="card-body">
        @if (_isLoading)
        {
            <div class="d-flex justify-content-center">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Cargando...</span>
                </div>
            </div>
        }
        else if (_historial == null || !_historial.Any())
        {
            <div class="alert alert-info mb-0">
                <i class="bi bi-info-circle"></i> Este paciente no tiene registros médicos previos.
            </div>
        }
        else
        {
            <div class="list-group">
                @foreach (var registro in _historial)
                {
                    <div class="list-group-item list-group-item-action flex-column align-items-start">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1 text-primary">Consulta General</h6>
                            <small class="text-muted">@registro.VisitDate.ToString("f")</small>
                        </div>
                        <p class="mb-1">@registro.Description</p>
                        <small class="text-muted">Atendido por el médico.</small>
                    </div>
                }
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public int PatientId { get; set; }

    private List<MedicalHistoryDto>? _historial;
    private bool _isLoading = false;

    protected override async Task OnParametersSetAsync()
    {
        if (PatientId > 0)
        {
            _isLoading = true;
            try
            {
                _historial = await PatientService.GetMyMedicalHistoryAsync(PatientId);
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error cargando historial: {ex.Message}");
            }
            finally
            {
                _isLoading = false;
            }
        }
    }
}